    TemplateJspUpdate template = new TemplateJspUpdate();
	    
    // 子模板所需要的入参
    template.SourceTable = tb;
	//template.RootTableSpaceName = this.RootTableSpaceName;
   
    /// 输出子模板文档
    template.Render(sw);
    
	/// 结束
    //sw.WriteLine("//end of class " + tb.Name);
    // 关闭输出流
    sw.Close();
    //关闭文档
    fs.Close();
}

</script>